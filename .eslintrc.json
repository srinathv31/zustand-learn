{
	"extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
	"env": {
		"node": true,
		"es2021": true
	},
    "parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 2021
	},
	"rules": {
        "@typescript-eslint/no-non-null-assertion": "off",
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "object-curly-spacing": [
            "error", "always"
        ],
        "eol-last": [
            "error", "always"
        ]
    }
}
